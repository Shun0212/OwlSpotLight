{
  "name": "owlspotlight",
  "displayName": "owlspotlight",
  "description": "Highlight similar code snippets using semantic search.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "owlspotlight",
          "title": "OwlSpotlight",
          "icon": "media/owl.svg"
        }
      ]
    },
    "views": {
      "owlspotlight": [
        {
          "id": "owlspotlight.sidebar",
          "name": "コード検索",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "owlspotlight.startServer",
        "title": "OwlSpotlight: サーバー起動"
      },
      {
        "command": "owlspotlight.searchCode",
        "title": "OwlSpotlight: コード検索"
      }
    ]
  },
  "menus": {
    "view/item/context": [
      {
        "command": "owlspotlight.startServer",
        "when": "view == owlspotlight-actions",
        "group": "inline"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
